{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:vue/essential"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "vue/no-parsing-error": [
      2,
      {
        "x-invalid-end-tag": false
      }
    ],
    "prettier/prettier": 1,
    "no-unused-vars": 1,
    "vue/require-v-for-key": "warn",
    "vue/no-use-v-if-with-v-for": "warn",
    "vue/custom-event-name-casing": 1
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "globals": {
    "uni": true,
    "plus": true
  }
}
